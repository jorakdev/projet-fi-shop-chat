<!DOCTYPE html>
<html>
	<head>
		<title></title>
		<style media="screen">
			body{
				background-color:#222F3E;
			}
			p{
				color:white;
				font-size:40px;
			}
			label{
				color:white;
			}
		</style>
	</head>

	<body class="bgimg w3-display-container">

		<div class="container">

			<p class="logo">Log<span id="spa">in</span> for admin</p>

			<form action="<%= admin_index_path %>" method="post">

				<input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

				<div class="lab1">
					<div class="form-group">
						<label class="control-label col-sm-2" for="email">Email:</label>
						<div class="col-sm-10">
							<input type="text" class="form-control col-md-4 col-sm-12 " name="email" placeholder="Enter email">
						</div>
					</div>
				</div>

				<div class="lab2">
					<div class="form-group">
						<label class="control-label col-sm-2" for="pwd">Password:</label>
						<div class="col-sm-10">
							<input type="password" class="form-control col-md-4 col-sm-12 " name="password" placeholder="Enter password">
						</div>
					</div>
				</div>

				<div class="space">

					<div class="btn">
						<div class="container">
							<button type="submit" class="btn btn-primary btn-md-12 ">Se Connecter</button><br><br>
							<!-- <button href="/" type="submit" class="btn btn-success btn-md-12 ">home</button> -->
							<%= link_to "HOME",root_path, class:"btn btn-success btn-md-12"%>

						</div>
					</div>

				</form>

			</div>

		</body>

	</html>
